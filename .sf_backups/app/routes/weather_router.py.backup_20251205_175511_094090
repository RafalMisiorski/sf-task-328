from fastapi import APIRouter, HTTPException
from app.schemas.weather import WeatherResponse

router = APIRouter()

# Mock data for weather information
mock_weather_data = {
    "London": {"temperature": "15°C", "description": "Cloudy"},
    "New York": {"temperature": "20°C", "description": "Sunny"},
    "Tokyo": {"temperature": "25°C", "description": "Rainy"}
}

@router.get("/weather/{city}", response_model=WeatherResponse)
def get_weather(city: str):
    """
    Get weather information for a specific city.
    """
    if city not in mock_weather_data:
        raise HTTPException(status_code=404, detail=f"Weather data for {city} not found")
    return WeatherResponse(**mock_weather_data[city])
